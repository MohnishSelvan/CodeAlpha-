import random

def hangman():
    # List of predefined words
    word_list = ["apple", "chair", "bread", "water", "plant"]
    word = random.choice(word_list)  # Randomly choose a word
    guessed_letters = []  # Store guessed letters
    tries = 6  # Number of wrong guesses allowed

    print("ğŸ® Welcome to Hangman!")
    print("_ " * len(word))  # Show blanks for the word

    while tries > 0:
        guess = input("Guess a letter: ").lower()

        # Input validation
        if len(guess) != 1 or not guess.isalpha():
            print("Please enter a single alphabet.")
            continue

        if guess in guessed_letters:
            print("You already guessed that letter!")
            continue

        guessed_letters.append(guess)

        if guess in word:
            print("âœ… Good guess!")
        else:
            tries -= 1
            print(f"âŒ Wrong guess! Tries left: {tries}")

        # Show current word status
        display_word = ""
        for letter in word:
            if letter in guessed_letters:
                display_word += letter + " "
            else:
                display_word += "_ "
        print(display_word.strip())

        # Check if word is completely guessed
        if all(letter in guessed_letters for letter in word):
            print("ğŸ‰ You won! The word was:", word)
            break
    else:
        print("ğŸ’€ You lost! The word was:", word)

# Run the game
hangman()
